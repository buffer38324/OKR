<Application
    x:Class="Okr.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Okr">
    <Application.Resources>
        <Style TargetType="TextBox" x:Key="MyTextBox">
            <Setter Property="AutomationProperties.Name" Value="multi-line TextBox" />
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="true"/>
            <Setter Property="IsSpellCheckEnabled" Value="True"/>
            <Setter Property="SelectionHighlightColor" Value="Green"/>
        </Style>
        <Style TargetType="Button" x:Key="MyButton">
            <Setter Property="AutomationProperties.Name" Value="Custom appearance"/>
            <Setter Property="Padding" Value="4,-3,4,-3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
